{
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna exec --parallel -- tsc -b",
    "clean": "lerna run clean",
    "dev": "lerna exec --parallel -- tsc -b -w",
    "prepublish": "yarn clean && yarn build",
    "publish-canary": "lerna version prerelease --preid canary && yarn run lerna publish from-git --dist-tag canary",
    "publish-beta": "lerna version prerelease --preid beta && yarn run lerna publish from-git --dist-tag beta",
    "publish-stable": "lerna version && yarn run lerna publish from-git",
    "publish": "./scripts/publish.js",
    "precommit": "lint-staged -v"
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "eslint --fix --quiet",
      "prettier --write"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "eslint": "^7.20.0",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  },
  "name": "demacia"
}
